<UserControl x:Class="WeatherApp.Views.LocationsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeatherApp.Views"
             xmlns:viewmodels="clr-namespace:WeatherApp.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="685" d:DesignWidth="995">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border CornerRadius="30 0 0 30" Background="#FFFFFF">
            <StackPanel>
                <TextBlock Text="Search Location" FontSize="28" FontWeight="Bold" Margin="30 50 0 0" Foreground="#333333"/>
                <TextBlock Text="Search for a city to see weather" FontSize="14" Margin="30 10 0 0" Foreground="#9a9a9a" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" CornerRadius="0 30 30 0" Background="#F6F6F6">
            <StackPanel Margin="40 50 40 40">

                <Border Background="#FFFFFF" CornerRadius="15" Padding="20" Margin="0 0 0 30">
                    <Grid>
                        <TextBlock x:Name="textSearchHint"
                                   Text="Search location..."
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="5,0,0,0"
                                   Foreground="#CCCCCC"
                                   FontSize="14"
                                   IsHitTestVisible="False"/>

                        <TextBox Name="txtSearchLocation" 
                                 Style="{StaticResource textBox}"
                                 TextChanged="txtSearchLocation_TextChanged"
                                 Background="Transparent"
                                 BorderThickness="0">
                            <TextBox.Text>
                                <Binding Path="SearchQuery" UpdateSourceTrigger="PropertyChanged"/>
                            </TextBox.Text>
                            <TextBox.InputBindings>
                                <KeyBinding Command="{Binding SearchCommand}" Key="Enter" />
                            </TextBox.InputBindings>
                        </TextBox>
                    </Grid>
                </Border>

                <Border Background="#FFFFFF" CornerRadius="15" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Search Results" 
                                   FontSize="20" 
                                   FontWeight="SemiBold" 
                                   Foreground="#333333" 
                                   Margin="0 0 0 15"
                                   Visibility="{Binding HasSearchResults, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        <ListBox ItemsSource="{Binding SearchResults}"
                                 SelectedItem="{Binding SelectedLocation}"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F6F6F6" 
                                            CornerRadius="10" 
                                            Padding="15" 
                                            Margin="0 0 0 10"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="SearchResult_MouseLeftButtonDown">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold" 
                                                       Foreground="#333333"/>
                                            <TextBlock Text="{Binding Country}" 
                                                       FontSize="14" 
                                                       Foreground="#9a9a9a" 
                                                       Margin="0 5 0 0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <TextBlock Text="Type a city name and press Enter" 
                                   FontSize="14" 
                                   Foreground="#9a9a9a" 
                                   TextAlignment="Center"
                                   Margin="0 20 0 0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasSearchResults}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsSearching}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <ProgressBar IsIndeterminate="True" 
                                     Height="4" 
                                     Margin="0 20 0 0"
                                     Visibility="{Binding IsSearching, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>