<UserControl x:Class="WeatherApp.Views.LocationsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeatherApp.Views"
             xmlns:viewmodels="clr-namespace:WeatherApp.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="685" d:DesignWidth="995">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border CornerRadius="30 0 0 30" Background="#FFFFFF">
            <StackPanel>
                <TextBlock Text="Locations" FontSize="28" FontWeight="Bold" Margin="30 50 0 0" Foreground="#333333"/>
                <TextBlock Text="Search and manage your favorite places" FontSize="14" Margin="30 10 0 0" Foreground="#9a9a9a" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" CornerRadius="0 30 30 0" Background="#F6F6F6">
            <StackPanel Margin="40 50 40 40">

                <Border Background="#FFFFFF" CornerRadius="15" Padding="20" Margin="0 0 0 30">
                    <Grid>
                        <TextBlock x:Name="textSearchHint"
                                   Text="Search location..."
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Margin="5,0,0,0"
                                   Foreground="#CCCCCC"
                                   FontSize="14"
                                   IsHitTestVisible="False"/>

                        <TextBox Name="txtSearchLocation" 
                                 Style="{StaticResource textBox}"
                                 TextChanged="txtSearchLocation_TextChanged"
                                 Background="Transparent"
                                 BorderThickness="0">
                            <TextBox.Text>
                                <Binding Path="SearchQuery" UpdateSourceTrigger="PropertyChanged"/>
                            </TextBox.Text>
                            <TextBox.InputBindings>
                                <KeyBinding Command="{Binding SearchCommand}" Key="Return" />
                            </TextBox.InputBindings>
                        </TextBox>
                    </Grid>
                </Border>

                <Border Background="#FFFFFF" CornerRadius="15" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Favorite Places" FontSize="20" FontWeight="SemiBold" Foreground="#333333" Margin="0 0 0 15"/>

                        <ListBox ItemsSource="{Binding FavoriteLocations}"
                                 SelectedItem="{Binding SelectedLocation}"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F6F6F6" 
                                            CornerRadius="10" 
                                            Padding="15" 
                                            Margin="0 0 0 10"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="FavoriteLocation_MouseLeftButtonDown">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" Foreground="#333333"/>
                                                <TextBlock Text="{Binding Country}" FontSize="14" Foreground="#9a9a9a" Margin="0 5 0 0"/>
                                            </StackPanel>

                                            <Button Grid.Column="1" 
                                                    Content="Ã—" 
                                                    FontSize="20" 
                                                    Foreground="#999999"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="5"
                                                    Cursor="Hand"
                                                    Click="RemoveFavorite_Click"
                                                    Tag="{Binding}">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="Transparent" Padding="5">
                                                                        <ContentPresenter/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Foreground" Value="#FF0000"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <TextBlock Text="No favorite locations yet.&#x0a;Add locations to see them here." 
                                   FontSize="14" 
                                   Foreground="#9a9a9a" 
                                   TextAlignment="Center"
                                   Margin="0 20 0 0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasNoFavorites}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>