<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:WeatherApp.UserControls"
        xmlns:local="clr-namespace:WeatherApp"
        xmlns:views="clr-namespace:WeatherApp.Views"

        mc:Ignorable="d" Height="685" Width="995" Background="Transparent"
        WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" FontFamily="Cambria">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Left-->

        <Border CornerRadius="30 0 0 30" Background="#FFFFFF">
            <StackPanel>
                <!--Navigation Panel-->
                <Border Background="#F6F6F6" CornerRadius="15" HorizontalAlignment="Center" Width="200" Margin="0 35 0 0" Padding="5">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <!--Home Button-->
                        <Button Name="btnHome" 
                              Click="btnHome_Click" 
                              Style="{StaticResource navButton}"
                              ToolTip="Home">
                            <TextBlock Text="ðŸ " FontSize="20" VerticalAlignment="Center"/>
                        </Button>
                        
                        <!--Settings Button-->
                        <Button Name="btnSettings" 
                              Click="btnSettings_Click" 
                              Style="{StaticResource navButton}"
                              ToolTip="Settings">
                            <TextBlock Text="âš™ï¸" FontSize="20" VerticalAlignment="Center"/>
                        </Button>
                        
                        <!--Locations Button-->
                        <Button Name="btnLocations" 
                              Click="btnLocations_Click" 
                              Style="{StaticResource navButton}"
                              ToolTip="Locations">
                            <TextBlock Text="ðŸ“" FontSize="20" VerticalAlignment="Center"/>
                        </Button>
                    </StackPanel>
                </Border>

                <StackPanel Margin="50 60 0 0">
                    <Image Source="{Binding WeatherIcon}" Width="140" HorizontalAlignment="Left" />
                    <TextBlock Text="{Binding DisplayTemperature}" FontSize="46" Margin="0 20 0 0"/>
                    <TextBlock Text="{Binding FormattedTime}" FontSize="18" FontWeight="SemiBold" Margin="0 15 0 0"/>
                    <Separator Background="#dadada" Margin="3 30 40 30" Height="0.8"/>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/WeatherApp;component/Images/cloud.png" Width="20" Height="20"/>
                        <TextBlock Text="{Binding CurrentWeather.Description}" FontSize="14" FontWeight="SemiBold" Margin="10 0 0 0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 15 0 77">
                        <Image Source="/WeatherApp;component/Images/water.png" Width="20" Height="20"/>
                        <TextBlock FontSize="14" FontWeight="SemiBold" Margin="10 0 0 0" VerticalAlignment="Center">
                            <TextBlock.Text>
                                <Binding Path="RainProbability" StringFormat="Rain - {0}%"/>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <Border CornerRadius="15" Background="Black" Margin="30 0">
                    <Border CornerRadius="15" Padding="0 30">
                        <Border.Background>
                            <ImageBrush ImageSource="/WeatherApp;component/Images/q1.jpg" Stretch="Fill" Opacity="0.65"/>
                        </Border.Background>

                        <TextBlock Text="{Binding LocationName}" Foreground="#FFFFFF" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold" FontSize="14"/>
                    </Border>
                </Border>
            </StackPanel>
        </Border>

        <!--Right Side-->

        <Border Grid.Column="1" CornerRadius="0 30 30 0" MouseDown="Border_MouseDown" Background="#F6F6F6" >
            <ContentControl Name="contentArea">
                <StackPanel Name="homeContent">
                <!--Top Menu-->
                <Grid Margin="40 30 40 10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <Label Content="Week" Style="{StaticResource textButton}" Margin="15 0 0 0"/>
                    </StackPanel>
                </Grid>

                <ItemsControl ItemsSource="{Binding DailyForecasts}" Margin="40 20 0 20">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <uc:CardDay DataContext="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="Today's Highlights" FontSize="16" FontWeight="SemiBold" Margin="40 10 0 10"/>

                <!--Widget Section-->
                <WrapPanel Margin="40 0 0 0">
                    <!--Widget 1-->
                        <Border Style="{StaticResource widgetBorder}">
                            <Grid>
                                <TextBlock Text="Precipitation" Style="{StaticResource titleText}"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Image Source="/WeatherApp;component/Images/rain.png" Width="30" Height="30" Margin="0 0 10 0" VerticalAlignment="Center"/>

                                    <TextBlock FontSize="34" FontWeight="SemiBold" VerticalAlignment="Center">
                                        <TextBlock.Text>
                                            <Binding Path="DisplayPrecipitation"/>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>

                                <TextBlock Text="in last 24h" FontSize="12" VerticalAlignment="Bottom" Foreground="#9a9a9a"/>
                            </Grid>
                        </Border>

                        <!--Widget 2-->
                    <Border Style="{StaticResource widgetBorder}">
                        <Grid>
                            <TextBlock Text="Wind Status" Style="{StaticResource titleText}"/>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{Binding DisplayWindSpeed}" FontSize="34" FontWeight="SemiBold"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                                <Image Source="/WeatherApp;component/Images/dir.png" Width="25" Height="25" Margin="0 0 10 0"/>
                                <TextBlock Text="{Binding CurrentWeather.WindDirection}" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!--Widget 3-->
                    <Border Style="{StaticResource widgetBorder}" BorderBrush="#03A9F4">
                        <StackPanel>
                            <TextBlock Text="Sunrise Sunset" Style="{StaticResource titleText}"/>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 25 0 0">
                                <Image Source="/WeatherApp;component/Images/sunrise.png" Width="40" Height="40" Margin="0 0 10 0"/>
                                    <StackPanel>
                                        <TextBlock Text="Sunrise" FontSize="12" Foreground="#9a9a9a"/>
                                        <TextBlock Text="{Binding DisplaySunrise}" FontSize="16" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </StackPanel>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 10 0 0">
                                <Image Source="/WeatherApp;component/Images/sunset.png" Width="40" Height="40" Margin="0 0 10 0"/>
                                    <StackPanel>
                                        <TextBlock Text="Sunset" FontSize="12" Foreground="#9a9a9a"/>
                                        <TextBlock Text="{Binding DisplaySunset}" FontSize="16" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--Widget 4-->
                    <Border Style="{StaticResource widgetBorder}">
                        <Grid>
                            <TextBlock Text="Humidity" Style="{StaticResource titleText}"/>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock FontSize="34" FontWeight="SemiBold">
                                    <TextBlock.Text>
                                        <Binding Path="CurrentWeather.Humidity" StringFormat="{}{0}"/>
                                    </TextBlock.Text>
                                </TextBlock>
                                <TextBlock Text="%" FontSize="14" VerticalAlignment="Bottom" Margin="5 0 0 3"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                                <TextBlock Text="Normal" FontWeight="SemiBold"/>
                                <Image Source="/WeatherApp;component/Images/like.png" Width="18" Height="18" Margin="10 0 0 0"/>
                            </StackPanel>

        
                        </Grid>
                    </Border>

                    <!--Widget 5-->
                    <Border Style="{StaticResource widgetBorder}">
                        <Grid>
                            <TextBlock Text="Visibility" Style="{StaticResource titleText}"/>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock FontSize="34" FontWeight="SemiBold">
                                        <TextBlock.Text>
                                            <Binding Path="DisplayVisibility"/>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                                <TextBlock Text="{Binding VisibilityStatus}" FontWeight="SemiBold"/>
                                <Image Source="/WeatherApp;component/Images/happy.png" Width="18" Height="18" Margin="10 0 0 0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!--Widget 6-->
                    <Border Style="{StaticResource widgetBorder}">
                        <Grid>
                            <TextBlock Text="Air Quality" Style="{StaticResource titleText}"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock FontSize="34" FontWeight="SemiBold">
                                        <TextBlock.Text>
                                            <Binding Path="CurrentWeather.AirQuality" StringFormat="{}{0}"/>
                                        </TextBlock.Text>
                                    </TextBlock>
                                    <TextBlock Text="AQI" FontSize="14" VerticalAlignment="Bottom" Margin="5 0 0 8"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                                <TextBlock Text="{Binding AirQualityStatus}" FontWeight="SemiBold"/>
                                <Image Source="/WeatherApp;component/Images/dislike.png" Width="18" Height="18" Margin="10 0 0 0"/>
                            </StackPanel>
                        </Grid>
                    </Border>




                </WrapPanel>
                </StackPanel>
            </ContentControl>
        </Border>

    </Grid>
</Window>
